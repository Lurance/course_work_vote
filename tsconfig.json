{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2015"],
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "noImplicitThis": true,
    "noImplicitAny": true
  }
  ,
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "include": [
    "src/**/*"
  ]
}